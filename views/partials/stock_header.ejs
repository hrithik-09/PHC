<div class="app-content-header">
  <h1 class="app-content-headerText">Stock Entry Registry</h1>
  <button class="app-content-headerButton" id="add-stock-button">Add Stock Entry</button>
</div>
<div id="popupForm" class="popup-form">
  <div class="popup-form-content">
    <span class="close-btn" onclick="closePopup()">&times;</span>
    <h2>Add Stock Entries</h2>
    <form id="stockForm" action="/add-stocks" method="POST">
      <div id="entries-container"></div>
      <button type="button" id="add-entry-btn">Add Entry</button>
      <button type="submit">Submit All Entries</button>
    </form>
    <hr>
    <h2>Upload Excel</h2>
    <form id="uploadForm" action="/upload-stock" method="POST" enctype="multipart/form-data">
      <label for="excel-file">Upload Excel File:</label>
      <input type="file" id="excel-file" name="excel-file" accept=".xlsx, .xls" required>
      <button type="submit">Upload</button>
    </form>
  </div>
</div>